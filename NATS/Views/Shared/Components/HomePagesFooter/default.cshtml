@model FooterViewModel

<!-- ** Footer** -->
<div id="footer">
    <div class="main-container">
    
        <!-- **Recent Entries** -->
        <div class="column one-third" style="margin-bottom: 20px;">
            <div class="widget widget_recent_entries">
                <h2 class="widgettitle">
                    <span>Bài viết mới nhất</span>
                </h2>
                <ul style="padding-left: 3px; ">
                    @if (Model.Posts.Items != null)
                    {
                        @foreach (PostBasicViewModel post in Model.Posts.Items)
                        {
                            <li style="display: flex; flex-direction: row; overflow: hidden;"> 
                                <a href="blog-single.html" title="" style="flex-shrink: 0; flex-grow: 1">
                                    @{
                                        string thumbnailSource = post.ThumbnailUrl;
                                        if (thumbnailSource == null)
                                        {
                                            thumbnailSource = "/images/front-pages/posts/default.jpg";
                                        }
                                    }
                                    <img src="@thumbnailSource" alt="@post.Title" title="@post.Title"
                                         style="width: 54px; height: 54px;" />
                                </a>
                                <div style="flex-grow: 1; overflow: hidden;">
                                    <b>
                                        <a href="blog-single.html" title="@post.Title"
                                        style="width: 100%; white-space: nowrap; text-overflow: ellipsis;
                                                overflow: hidden; display: inline-block; width: 100%;">
                                            @post.Content[..Math.Min(post.Title.Length, 100)]
                                        </a>
                                    </b>
                                    <p style="width: 100%; white-space: nowrap; text-overflow: ellipsis;
                                            overflow: hidden; display: inline-block; width: 100%;">
                                            @post.Content[..Math.Min(post.Content.Length, 100)]
                                    </p>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div><!-- **Recent Entries - End** -->
        
        <!-- **Testimonials** -->
        <div class="column one-third" style="margin-bottom: 20px;">
            <div class="widget">
                <h2 class="widgettitle">
                    <span>Bản đồ</span>
                </h2>
                <div class="green-border">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1946.110234483311!2d108.0633383046389!3d12.699028422944613!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3171f7c2ed501ea7%3A0xe780f4b5d49f18b0!2zMjEgUGhhbiDEkMSDbmcgTMawdSwgVMOibiBBbiwgVGjDoG5oIHBo4buRIEJ1w7RuIE1hIFRodeG7mXQsIMSQ4bqvayBM4bqvaywgVmlldG5hbQ!5e0!3m2!1sen!2sus!4v1711459933261!5m2!1sen!2sus"
                            width="100%" height="300px"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div><!-- **Testimonials - End** -->
        
        <!-- **Contact Us** -->
        <div class="column one-third last" style="margin-bottom: 20px;">
            <div class="widget">
                <h2 class="widgettitle">
                    <span>@Html.DisplayNameFor(model => model.ContactInfo)</span>
                </h2>
                <ul class="contact-details">
                    @if (Model.ContactInfo.PhoneNumber != null)
                    {
                        <li>
                            <span class="phone"></span>
                            <a href="tel:@Model.ContactInfo.PhoneNumber">
                                @Model.ContactInfo.PhoneNumber
                            </a>
                        </li>
                    }
                    @if (Model.ContactInfo.ZaloNumber != null)
                    {
                        <li>
                            <span class="zalo"></span>
                            <p>
                                @{
                                    string zaloUrl = "https://zalo.me/" + Model.ContactInfo.ZaloNumber
                                        .Replace(" ", "")
                                        .Replace("+84", "0");
                                }
                                <a href='@zaloUrl' target="_blank" rel="noopener noreferrer">
                                    @Model.ContactInfo.ZaloNumber
                                </a>
                        </li>
                    }
                    @if (Model.ContactInfo.Email != null)
                    {
                        <li>
                            <span class="mail"></span>
                            <a href="mailto:@Model.ContactInfo.Email">
                                @Model.ContactInfo.Email
                            </a>
                        </li>
                    }
                    @if (Model.ContactInfo.Address != null)
                    {
                        <li>
                            <span class="address"></span>
                            @Model.ContactInfo.Address
                        </li>
                    }              
                </ul>                                      
            </div>
        </div><!-- **Contact Us - End** -->
    
    
    </div>
</div><!-- **Footer - End** -->

<!-- **Footer Bottom** -->
<div class="footer-bottom"> 
    <div class="main-container">  
        <p style="text-align: center">
            &copy; @Model.GeneralSettings.ApplicationShortName - @Model.GeneralSettings.ApplicationName @DateTime.Now.Year
            <br/>
            <a asp-action="Dashboard" asp-controller="Admin">Trang quản trị</a>
        </p>          
    </div>
</div><!-- **Footer Bottom - End** -->