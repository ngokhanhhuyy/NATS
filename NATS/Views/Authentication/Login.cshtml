@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <title>Đăng nhập - NATSAdmin</title>
        <link href="~/css/admin/login.css" type="text/css" rel="stylesheet"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <meta name="viewport"
              content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <div id="login_box">
            <div class="login_header">
                <img alt="NATS" src="~/images/login/login_logo.png">
            </div>
            <div class="login_container">
                <form asp-action="Login" asp-controller="Authentication" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group my-2">
                        <input asp-for="UserName" class="form-control"
                                placeholder="@Html.DisplayNameFor(model => model.UserName)">
                        <span asp-validation-for="UserName"></span>
                    </div>

                    <div class="form-group mb-2">
                        <input asp-for="Password"
                                class="form-control"
                                placeholder="@Html.DisplayNameFor(model => model.Password)">
                        <span asp-validation-for="Password"></span>
                    </div>

                    <input class="btn btn-primary w-100 shadow-sm" type="submit" value="Đăng nhập"/>
                </form>
            </div>
        </div>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    </body>
</html>