@model BreadcrumbViewModel

@for (int i = 0; i < Model.Items.Count; i++)
{
    string displayName = Model.Items[i].DisplayName;
    string url = Model.Items[i].Url;
    @if (i < Model.Items.Count - 1)
    {
        <a href="@url" class="text-decoration-none d-block p-0 z-3">
            <span class="mx-1 opacity-75 align-content-end page-name">@displayName</span>
        </a>
        <span class="opacity-75 separator"> ＞ </span>
    }
    else
    {
        <span class="fw-bold page-name">@displayName</span>
    }
}